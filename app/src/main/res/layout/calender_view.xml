<?xml version="1.0" encoding="utf-8"?>
<!-- IM/2020/084 - SS Ahamed -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/app_navbar"
            android:backgroundTint="#B027A4"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button5"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/baseline_dehaze_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="115dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:text="TaskBuddy"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_account_circle_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="149dp"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:id="@+id/bottom_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/addTask"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_add_circle_outline_24"
            android:onClick="onAddTaskClick"/>

        <ImageView
            android:id="@+id/calender"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_calendar_month_24_2" />

        <ImageView
            android:id="@+id/taskScore"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_analytics_24" />

        <ImageView
            android:id="@+id/taskTime"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_access_time_24_2" />
    </LinearLayout>

</RelativeLayout>
