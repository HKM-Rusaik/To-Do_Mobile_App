<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">


    <!-- Top bar with button, title, and user icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/app_navbar"
        android:backgroundTint="#B027A4"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/baseline_dehaze_24" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TaskBuddy"
            android:textColor="#ffffff"
            android:textSize="45px"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_account_circle_24" />

    </LinearLayout>

    <!-- Add Task Title -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="32dp"/>

    <!-- Task Name Section -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/form_border"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/dullBlack"
        android:hint="task name"
        android:textAlignment="center"
        />

    <!-- Task Description Section -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/taskDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/form_border"
        android:ems="10"
        android:inputType="text"
        android:layout_marginBottom="32dp"
        android:hint="description"
        android:textColor="@color/black"
        android:textColorHint="@color/dullBlack"
        android:textAlignment="center"/>

    <!-- Setting Button -->
    <Button
        android:id="@+id/setting_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:backgroundTint="#B027A4"
        android:text="Go to setting"
        android:textSize="60px"
        android:onClick="onSettingClick"/>

    <!-- File Present Icon, adjust its placement as needed -->

</LinearLayout>
